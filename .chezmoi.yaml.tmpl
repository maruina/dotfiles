{{ $email := promptStringOnce . "email" "Enter email address" -}}
{{ $signingkey := promptStringOnce . "signingKey" "Enter Github SSH signing key" -}}

editor:
  command: "hx"
data:
  email: {{ $email | quote }}
  profile: {{ promptChoice "Enter profile" (list "personal" "work") | quote }}
  signingkey: {{ $signingkey | quote }}
